import java.util.Scanner;
class HelloWorld {
    static int basicSalary;
    static int hra;
    static int da;
    static int grossSalary;
    
    public static void main(String[] args) {
        while(true){
         Scanner sc=new Scanner(System.in);
         basicSalary=sc.nextInt();
         if(basicSalary<=10000){
             hra=basicSalary*20/100;
             da=basicSalary*80/100;
             grossSalary=hra+da;
             
         }
         else if(basicSalary<=20000)
         {
             hra=basicSalary*25/100;
             da=basicSalary*90/100;
             grossSalary=hra+da;
             //System.out.println("The salary is :"+(grossSalary=hra+da+basicSalary));
         }
        
        else{
            hra=basicSalary*30/100;
            da=basicSalary*95/100;
            grossSalary=hra+da;
            //System.out.println("The salary is :"+(grossSalary=hra+da+basicSalary));
            
        }
        System.out.println("The salary is :"+(grossSalary=hra+da+basicSalary));
        }
    }
}
